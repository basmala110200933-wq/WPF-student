<Window x:Class="studentdegree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:studentdegree"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition  ></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="AliceBlue"></Grid>
        <Label Grid.Row="0" Grid.ColumnSpan="2"  Width="500" FontFamily="Comic Sans MS" FontSize="27" Foreground="DarkBlue" Margin="239,0,61,0" >Welcome to the app! 💕</Label>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Width="300" Margin="216,22,284,48" Grid.RowSpan="2">
            <Label Content="Username:" FontSize="15" FontFamily="Comic Sans MS"></Label>
            <TextBox Name="usernamebox" Grid.Row="1" Height="50" Width="230" BorderBrush="Black"></TextBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Width="300" Height="100" Margin="219,65,281,37" Grid.RowSpan="3">
            <Label Content="Password:" FontSize="15" FontFamily="Comic Sans MS"></Label>
            <TextBox Name="Passwordbox" Grid.Row="1" Height="50" Width="230" BorderBrush="Black"></TextBox>
        </StackPanel>
        <Button Grid.Row="4" Grid.ColumnSpan="2" Height="50" Width="200" Background="#FFBCE0FF" Content="Login" FontFamily="Comic Sans MS" FontSize="30" Margin="279,51,321,1" Click="Button_Click" Grid.RowSpan="2"></Button>
        <TextBlock Grid.Row="2" x:Name="myTextBlock"  FontSize="16" Foreground="DarkBlue" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="231,31,0,0"/>
        <TextBlock Grid.Row="4" x:Name="myTextBlock_Copy" FontSize="16" Width="300" Foreground="red" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,12,0,0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
